<Input_Recuperar_L@BoxLayout>:
    bg_icon: 0.7,0.1,0.7,1
    bg_text: 1,1,1,1
    t_text: 'Sin Texto'
    password: False
    orientation: 'horizontal'
    pos_hint: {'center_y': 0.5}
    canvas.before:
        Color:
            rgba: 0,0,0,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]
        Color:
            rgba: root.bg_text
        RoundedRectangle: #fondo blanco
            pos: self.pos[0] + dp(2), self.pos[1] + dp(2)
            size: self.size[0] - dp(4), self.size[1] - dp(4)
            radius: [20]
        
    TextInput:
        id: usuario
        hint_text: root.t_text
        multiline: False
        font_size: root.size[1]*0.4
        size_hint: 0.8,0.9
        foreground_color: 0,0,0,1
        background_color: 1,1,1,0
        cursor_color: 0,0,0,1
        pos_hint: {'center_y': 0.5}
        padding: (dp(10),((self.height - self.font_size)/2)-dp(2),dp(15),((self.height - self.font_size)/2)-dp(2))
        write_tab: False
        password: root.password

<Button_Recuperar_L@BoxLayout>:
    text: 'Sin Texto'
    orientation: 'horizontal'
    accion: None
    size_hint_y: None
    height: dp(50)
    
    canvas.before:
        Color:
            rgba: 0,0,0,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5]
        Color:
            rgba: 0.8,0.8,0.8,1
        RoundedRectangle:
            pos: self.pos[0] + dp(2), self.pos[1] + dp(2)
            size: self.size[0] - dp(4), self.size[1] - dp(4)
            radius: [5]
    Button:
        text: root.text
        background_color: 0,0,0,0
        color: 0,0,0,1
        font_size: sp(22)
        on_release: root.accion() if root.accion else None

<Layout_Recuperar_L>:
    orientation: 'vertical'
    padding: dp(20)
    spacing: dp(10)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: None
        height: dp(50)
        spacing: dp(10)
        canvas.before:
            Color:
                rgba:0,0,0,1
            Rectangle: 
                pos: self.pos
                size: self.size
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos[0]+dp(2), self.pos[1]+dp(2)
                size: self.size[0]-dp(4), self.size[1]-dp(4)
        Label:
            text: 'Recuperar Contraseña'
            color: 0,0,0,1
            font_size: dp(20)
            bold: True
            halign: 'center'
            valign: 'middle'
    
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.5
        padding: dp(10)
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.9
            padding: dp(10)
            canvas.before:
                Color:
                    rgba: 0,0,0,1
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    pos: self.pos[0]+dp(2), self.pos[1]+dp(2)
                    size: self.size[0]-dp(4), self.size[1]-dp(4)
                Color:
                    rgba: 0,0,0,1
                Triangle:
                    #pos: (self.pos[0]+self.width)-dp(20),self.pos[1]-dp(20)
                    points: ([(self.pos[0]+self.width)-dp(20),self.pos[1],(self.pos[0]+self.width)-dp(20),self.pos[1]-dp(20),(self.pos[0]+self.width),self.pos[1]])
            BoxLayout:
                id: img_recuperar
                orientation: 'vertical'
                #padding: dp(10)
                canvas: 
                    Color:
                        rgba: 0.9,0.9,0.4,1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
            
            Label:
                id: lbl_recuperar
                text: 'Ingrese su Correo Electrónico o Teléfono asociados a tu cuenta para recuperar tu contraseña.'
                color: 0,0,0,1
                font_size: sp(18)
                halign: 'center'
                valign: 'middle'
                text_size: (self.width, None)
                #padding: dp(5)

    Input_Recuperar_L:
        id: inp_recuperar_p
        size_hint_y: None
        height: dp(50)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        bg_icon: 0.7,0.1,0.7,1
        bg_text: 0.9,0.9,0.9,1
        t_text: 'Correo Electrónico o Teléfono'
    Input_Recuperar_L:
        id: inp_recuperar_s
        size_hint_y: None
        height: dp(50)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        bg_icon: 0.7,0.1,0.7,1
        bg_text: 0.9,0.9,0.9,1
        t_text: 'Correo Electrónico o Teléfono'
        opacity: 0
        disabled: True
        

    BoxLayout:
        id: box_btn_recuperar
        orientation: 'vertical'
        size_hint_y: 0.5
        Button_Recuperar_L:
            id: btn_recuperar
            text: 'Siguiente'
            size_hint_y: None
            height: dp(50)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            accion: root.Verificar_Codigo
            

    
    

        
            


#: import Factory kivy.factory.Factory

<Input_CreacionEventos@BoxLayout>:
    bg_icon: 0.7,0.1,0.7,1
    bg_text: 1,1,1,1
    t_text: 'Sin Texto'
    password: False
    orientation: 'horizontal'
    pos_hint: {'center_y': 0.5}
    canvas.before:
        Color:
            rgba: 0,0,0,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]
        Color:
            rgba: root.bg_text
        RoundedRectangle: #fondo blanco
            pos: self.pos[0] + dp(2), self.pos[1] + dp(2)
            size: self.size[0] - dp(4), self.size[1] - dp(4)
            radius: [20]
        
    TextInput:
        id: usuario
        hint_text: root.t_text
        multiline: True
        font_size: root.size[1]*0.4
        size_hint: 0.8,0.9
        foreground_color: 0,0,0,1
        background_color: 1,1,1,0
        cursor_color: 0,0,0,1
        pos_hint: {'center_y': 0.5}
        padding: (dp(10),((self.height - self.font_size)/2)-dp(2),dp(15),((self.height - self.font_size)/2)-dp(2))
        write_tab: False
        password: root.password

<Fechas_ListaInvitados@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(30)
    spacing: dp(5)
    TextInput:
        id: fecha_inicio
        hint_text: "Fecha y hora Inicia"
        multiline: False
        font_size: self.height*0.4
        size_hint: (0.9,None)
        height: dp(30)
    Label:
        text: " -> "
        font_size: self.height*0.6
        color: 0,0,0,1
        size_hint: (0.1,None)
        height: dp(30)
    TextInput:
        id: fecha_fin
        hint_text: "Fecha y hora Termina"
        multiline: False
        font_size: self.height*0.4
        size_hint: (0.9,None)
        height: dp(30)
    Button:
        text: "X"
        font_size: self.height*0.4
        size_hint: (None,1)
        width: self.height
        background_color: (1,0,0,1)
        on_release: root.parent.remove_widget(root)

<Filas_ListaInvitados@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: self.minimum_height
    spacing: dp(10)
    accion: None
    canvas.before: 
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size:self.size
            pos:self.pos
    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.3,None)
        pos_hint: {'top':1}      
        TextInput:
            id: rut_invitado
            hint_text: "Ingresar Rut"
            font_size: self.height*0.5
            color: 0,0,0,1
            pos_hint: {'top':1}
            size_hint: (1,None)
            height: dp(30)
            background_disabled_normal: ''
        Button:
            text: 'Eliminar Invitado'
            font_size: self.height*0.5
            size_hint: (1,None)
            height: dp(30)
            color: (1,1,1,1)
            background_color: (1,0,0,1)
            on_release:
                root.parent.remove_widget(root)
    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.7,None)
        height: self.minimum_height
        BoxLayout:
            id: fechas_invitado
            orientation: 'vertical'
            size_hint: (1,None)
            height: self.minimum_height
            pos_hint: {'center_y': 0.5}
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1,None)
            height: dp(30)
            width: dp(30)
            Button:
                text: '+'
                font_size: self.height*0.8
                size_hint: (1,None)
                height: dp(30)
                background_color: (0,0.6,0,1)
                on_release: root.accion(root) if root.accion else None
            

<Tabla_Invitados@BoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    canvas.before:
        Color:
            rgba: 0.8,0.8,0.8,1
        Rectangle:
            size:self.size
            pos:self.pos
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1,None)
        height: self.minimum_height
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,None)
            height: self.minimum_height
            padding: [dp(10),dp(5),dp(10),dp(5)]
            canvas: 
                Color:
                    rgba: 0.2,0.6,0.1,1
                Rectangle:
                    size:self.size
                    pos:self.pos
            Label:
                text: 'Lista de Invitados'
                font_size: self.height*0.6
                color: 0,0,0,1
                size_hint: (1,None)
                height: dp(30)
                valign: 'center'
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None,None)
                height: self.minimum_height
                Button:
                    id: btn_importar
                    text: 'Importar'
                    font_size: self.height*0.5
                    size_hint: (None,None)
                    height: dp(30)
                    background_color: (0,0.6,0,1)
                    on_release: root.seleccionar_archivo('xlsx')#root.Importar_invitados()


                Button:
                    text: 'Borrar Todo'
                    font_size: self.height*0.5
                    size_hint: (None,None)
                    color: (1,1,1,1)
                    height: dp(30)
                    background_color: (1,0,0,1)
                    on_release: filas_invitados.clear_widgets()
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(30)
            Label:
                text: 'Rut'
                font_size: (self.height*0.5)
                color: 0,0,0,1
                size_hint: (0.25,None)
                height: dp(30)
            Label:
                text: 'Fechas de Invitación'
                font_size: self.height*0.5
                color: 0,0,0,1
                size_hint: (0.75,None)
                height: dp(30)
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1,None)
        height: self.minimum_height
        # ScrollView:
        #     do_scroll_x: False
        #     do_scroll_y: True
        #     size_hint: (1,None)
        #     height: dp(500)
        BoxLayout:
            id: filas_invitados
            orientation: 'vertical'
            size_hint: (1,None)
            height: self.minimum_height
            spacing: dp(10)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,None)
            height: dp(50)
            Button:
                text: '+'
                size_hint: (1,None)
                height: dp(40)
                font_size: self.height*0.8
                background_color: (0,0.6,0,1)
                on_release: root.Agregar_invitado()

    
        
    





<Layout_CreacionEventos>:
    orientation: 'vertical'
    size_hint: (1,1)
    canvas.before:
        Color:
            rgba:1,1,1,1
        Rectangle:
            size:self.size
            pos:self.pos
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1,None)
        height: dp(50)
        Button:
            text: 'Atras'
            size_hint: (0.2,1)
            on_release: root.Abrir_MenuPrincipal() if Singleton_Perfil.get_instance().tipo_perfil else Abrir_Login()
        Label:
            text: 'Crear Evento'
            color:0,0,0,1
            font_size: self.height*0.4
            size_hint: (0.8,1)
    
    BoxLayout:
        orientation: 'vertical'
        size: (1,1)
        padding: [dp(10),dp(10)]
        canvas.before:
            Color: 
                rgba: 1,0.95,0,1
            Rectangle:
                size: self.size
                pos: self.pos
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_y: 1
            size_hint: (1,1)
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1,None)
                pos_hint: {'top':1}
                height: self.minimum_height
                spacing: dp(20)
                Input_CreacionEventos:
                    id: NombreEvento
                    t_text: 'Nombre del Evento'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                Input_CreacionEventos:
                    id: Ubicación
                    t_text: 'Ubicación'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                Input_CreacionEventos:
                    id: FechaInicio
                    t_text: 'Fecha Inicio'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                Input_CreacionEventos:
                    id: FechaFin
                    t_text: 'Fecha de Termino'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                Input_CreacionEventos:
                    id: HoraInicio
                    t_text: 'Hora Inicio'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                Input_CreacionEventos:
                    id: HoraInicio
                    t_text: 'Hora de Termino'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: (1,None)
                    height: self.minimum_height
                    Label:
                        text: 'Acceso'
                        color: (0,0,0,1)
                        size_hint: (0.3,None)
                        height: dp(35)
                        font_size: self.width/len(self.text)*1.7
                        valign: 'center'
                        halign: 'center'

                        canvas.before:
                            Color: 
                                rgba: 0.2,0.6,0.1,1
                            Rectangle:
                                size:self.size
                                pos:self.pos 
                         
                    Spinner:
                        id: acceso_spinner
                        text: 'Tipo de acceso'
                        values: ['Paga','Gratis']
                        size_hint_x: 0.3 if root.ids.acceso_spinner.text=='Paga' else 0.7
                        size_hint_y: None
                        height: dp(35)
                        font_size: self.height*0.6
                        background_color: 0.2, 0.6, 1, 1 # Color del botón principal
                        color: 1, 1, 1, 1 # Color del texto del botón principal
                    Input_CreacionEventos:
                        id: entrada_precio
                        t_text: 'Precio de Entrada'
                        password: False
                        size_hint_y: None
                        size_hint_x: 0.3 if root.ids.acceso_spinner.text=='Paga' else 0
                        #width: 0 if root.ids.acceso_spinner.text=='Paga' else None
                        height: dp(40)
                        opacity: 1 if root.ids.acceso_spinner.text=='Paga' else 0
                        disabled: True if root.ids.acceso_spinner.text=='Gratis' else False

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: (1,None)
                    height: self.minimum_height
                    Label:
                        text: 'Visibilidad'
                        color: (0,0,0,1)
                        height: dp(30)
                        font_size: self.width/len(self.text)*1.9
                        size_hint: (0.3,None)
                        valign: 'center'
                        halign: 'center'

                        canvas.before:
                            Color: 
                                rgba: 0.2,0.6,0.1,1
                            Rectangle:
                                size:self.size
                                pos:self.pos 
                         
                    Spinner:
                        id: visibilidad_spinner
                        text: 'Visibilidad'
                        values: ['Publico','Privado']
                        size_hint_x: 0.3 if root.ids.visibilidad_spinner.text=='Publico' else 0.7
                        size_hint_y: None
                        height: dp(30)
                        font_size: self.height*0.6
                        background_color: 0.2, 0.6, 1, 1 # Color del botón principal
                        color: 1, 1, 1, 1 # Color del texto del botón principal
                        #opacity: 1 if root.ids.visibilidad_spinner.text!='Publico' else 0
                    Input_CreacionEventos:
                        id: preinscripcion_precio
                        t_text: 'Precio de la pre-inscripción'
                        password: False
                        size_hint_y: None
                        size_hint_x: 0.3 if root.ids.visibilidad_spinner.text=='Publico' else 0
                        #width: 0 if root.ids.acceso_spinner.text=='Paga' else None
                        height: dp(40)
                        opacity: 1 if root.ids.visibilidad_spinner.text=='Publico' else 0
                        disabled: True if root.ids.visibilidad_spinner.text=='Privado' else False
                Tabla_Invitados:
                    id: tabla_invitados
                    size_hint_y: None
                    height: self.minimum_height
                
                    
                

                         







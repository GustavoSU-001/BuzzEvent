

<Input_CreacionEventos@BoxLayout>:
    bg_icon: 0.7,0.1,0.7,1
    bg_text: 1,1,1,1
    t_text: 'Sin Texto'
    password: False
    orientation: 'horizontal'
    pos_hint: {'center_y': 0.5}
    canvas.before:
        Color:
            rgba: 0,0,0,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]
        Color:
            rgba: root.bg_text
        RoundedRectangle: #fondo blanco
            pos: self.pos[0] + dp(2), self.pos[1] + dp(2)
            size: self.size[0] - dp(4), self.size[1] - dp(4)
            radius: [20]
        
    TextInput:
        id: usuario
        hint_text: root.t_text
        multiline: True
        font_size: root.size[1]*0.4
        size_hint: 0.8,0.9
        foreground_color: 0,0,0,1
        background_color: 1,1,1,0
        cursor_color: 0,0,0,1
        pos_hint: {'center_y': 0.5}
        padding: (dp(10),((self.height - self.font_size)/2)-dp(2),dp(15),((self.height - self.font_size)/2)-dp(2))
        write_tab: False
        password: root.password






<Layout_CreacionEventos>:
    orientation: 'vertical'
    size_hint: (1,1)
    canvas.before:
        Color:
            rgba:1,1,1,1
        Rectangle:
            size:self.size
            pos:self.pos
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1,None)
        height: dp(50)
        Button:
            text: 'Atras'
            size_hint: (0.2,1)
            on_release: root.Abrir_MenuPrincipal() if Singleton_Perfil.get_instance().tipo_perfil else Abrir_Login()
        Label:
            text: 'Crear Evento'
            color:0,0,0,1
            font_size: self.height*0.4
            size_hint: (0.8,1)
    
    BoxLayout:
        orientation: 'vertical'
        size: (1,1)
        padding: [dp(10),dp(10)]
        canvas.before:
            Color: 
                rgba: 1,0.95,0,1
            Rectangle:
                size: self.size
                pos: self.pos
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_y: 1
            size_hint: (1,1)
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1,None)
                pos_hint: {'top':1}
                height: self.minimum_height
                spacing: dp(20)
                Input_CreacionEventos:
                    id: NombreEvento
                    t_text: 'Nombre del Evento'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                Input_CreacionEventos:
                    id: Ubicación
                    t_text: 'Ubicación'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                Input_CreacionEventos:
                    id: FechaInicio
                    t_text: 'Fecha Inicio'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                Input_CreacionEventos:
                    id: FechaFin
                    t_text: 'Fecha de Termino'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                Input_CreacionEventos:
                    id: HoraInicio
                    t_text: 'Hora Inicio'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                Input_CreacionEventos:
                    id: HoraInicio
                    t_text: 'Hora de Termino'
                    password: False
                    size_hint_y: None
                    height: dp(40)

                         







#:import Window kivy.core.window.Window


<Input_Login@BoxLayout>:
    bg_icon: 0.7,0.1,0.7,1
    bg_text: 1,1,1,1
    t_text: 'Sin Texto'
    password: False
    orientation: 'horizontal'
    pos_hint: {'center_y': 0.5}
    canvas.before:
        Color:
            rgba: 0,0,0,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]
        Color:
            rgba: root.bg_text
        RoundedRectangle: #fondo blanco
            pos: self.pos[0] + dp(2), self.pos[1] + dp(2)
            size: self.size[0] - dp(4), self.size[1] - dp(4)
            radius: [20]
        
    
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.1
        canvas.before:
            Color:
                rgba: root.bg_icon#0.7,0.1,0.7,1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [20,0,0,20]
    TextInput:
        id: usuario
        hint_text: root.t_text
        text: "Estandar"
        multiline: False
        font_size: root.size[1]*0.4
        size_hint: 0.8,0.9
        foreground_color: 0,0,0,1
        background_color: 1,1,1,0
        cursor_color: 0,0,0,1
        pos_hint: {'center_y': 0.5}
        padding: (dp(10),((self.height - self.font_size)/2)-dp(2),dp(15),((self.height - self.font_size)/2)-dp(2))
        write_tab: False
        password: root.password

<Button_Login@ButtonBehavior+BoxLayout>:
    text: 'Sin Texto'
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(50)
    color: 0,0,0,1
    font_size: sp(22)
    canvas.before:
        Color:
            rgba: 0,0,0,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]
        Color:
            rgba: 0.8,0.8,0.8,1
        RoundedRectangle:
            pos: self.pos[0] + dp(2), self.pos[1] + dp(2)
            size: self.size[0] - dp(4), self.size[1] - dp(4)
            radius: [20]
    #Button:
    #    text: root.text
    #    on_release: root.on_release if root.on_release


<Layout_Login>:
    orientation:'vertical'
    padding: dp(30)
    spacing: dp(20)
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint: (0.5,1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        canvas.before:
            Color:
                rgba: 0,0,0,1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [20]
            Color:
                rgba: 0.2,0.6,1,1
            RoundedRectangle:
                pos: self.pos[0] + dp(2), self.pos[1] + dp(2)
                size: self.size[0] - dp(4), self.size[1] - dp(4)
                radius: [20]
    
    Input_Login:
        id: input_usuario
        size_hint_y: None
        height: dp(50)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        bg_icon: 0.2,0.6,1,1
        bg_text: 0.9,0.9,0.9,1
        t_text: 'Usuario'
    
    Input_Login:
        id: input_contraseña
        size_hint_y: None
        height: dp(50)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        bg_icon: 1,0.4,0.7,1
        bg_text: 0.9,0.9,0.9,1
        t_text: 'Contraseña'
        password: True
    
    BoxLayout: 
        orientation: 'vertical'
        #size_hint_y: None
        #height: dp(50)
        spacing: dp(10)
        pos_hint: {'center_x': 0.5, 'up': 1}
        canvas.before:
            Color:
                rgba: 0.2,0.6,1,1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [20]
        Button:
            text: '¿Olvidaste tu contraseña?'
            color: 0,0,0.5,1
            background_color: 1,1,1,0
            font_size: sp(22)
            size_hint_y: None
            height: dp(30)
            on_release: root.Boton_recuperar_contrasena()
            
        
        Button:
            text: '¿Desea Registrarse?'
            color: 0,0,0.5,1
            background_color: 1,1,1,0
            font_size: sp(22)
            size_hint_y: None
            height: dp(35)
            on_release: root.Boton_registrar_cuenta()

    Button_Login:
        text: 'Iniciar Sesión'
        on_release: root.Iniciar_Sesion(root.ids.input_usuario.ids.usuario.text)


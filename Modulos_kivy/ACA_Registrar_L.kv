#:kivy 2.1.0
#:import dp kivy.metrics.dp
<Input_Registrar_L@BoxLayout>:
    bg_icon: 0.7,0.1,0.7,1
    bg_text: 1,1,1,1
    t_text: 'Sin Texto'
    password: False
    orientation: 'horizontal'
    pos_hint: {'center_y': 0.5}
    canvas.before:
        Color:
            rgba: 0,0,0,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]
        Color:
            rgba: root.bg_text
        RoundedRectangle: #fondo blanco
            pos: self.pos[0] + dp(2), self.pos[1] + dp(2)
            size: self.size[0] - dp(4), self.size[1] - dp(4)
            radius: [20]
        
    TextInput:
        id: usuario
        hint_text: root.t_text
        multiline: True
        font_size: root.size[1]*0.4
        size_hint: 0.8,0.9
        foreground_color: 0,0,0,1
        background_color: 1,1,1,0
        cursor_color: 0,0,0,1
        pos_hint: {'center_y': 0.5}
        padding: (dp(10),((self.height - self.font_size)/2)-dp(2),dp(15),((self.height - self.font_size)/2)-dp(2))
        write_tab: False
        password: root.password

<Terminos_y_Condiciones@BoxLayout>:
    orientation: 'horizontal'
    size_hint: 1, None
    height: dp(30)
    width: self.minimum_width
    #pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    BoxLayout:
        orientation: 'horizontal'
        spacing: dp(5)
        size_hint_x: None
        CheckBox:
            id: checkbox_Registrar_L
            active: False
            size_hint: None, None
            size: dp(20), dp(20)
            pos_hint: {'center_y': 0.5}
            canvas: 
                Color:
                    rgba: (0, 0, 0, 1) if self.active else (0.7, 0.7, 0.7, 1)
                Ellipse:
                    pos: self.pos
                    size: self.size
        Label:
            text: 'Acepto los '
            color: 0,0,0,1
            font_size: sp(14)
            size_hint_y: None
            size_hint_x: None
            width: root.minimum_width
            height: dp(20)
            halign: 'right'
            valign: 'middle'
        Button:
            text: 'Términos y Condiciones'
            background_color: 0,0,0,0
            color: 0,0,1,1
            font_size: sp(14)
            size_hint_y: None
            size_hint_x: None
            height: dp(20)
            halign: 'left'
            valign: 'middle'
            #on_release: app.abrir_terminos_y_condiciones()

<Button_registrar@ButtonBehavior+BoxLayout>:
    text: 'Sin Texto'
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(50)
    canvas.before:
        Color:
            rgba: 0,0,0,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]
        Color:
            rgba: 0.8,0.8,0.8,1
        RoundedRectangle:
            pos: self.pos[0] + dp(2), self.pos[1] + dp(2)
            size: self.size[0] - dp(4), self.size[1] - dp(4)
            radius: [20]
    Label:
        text: root.text
        color: 0,0,0,1
        font_size: root.height*0.4


<Layout_Registrar_L>:
    orientation: 'vertical'
    padding: dp(20)
    spacing: dp(10)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint_y: None
        height: dp(50)
        spacing: dp(10)
        canvas.before:
            Color:
                rgba:0,0,0,1
            Rectangle: 
                pos: self.pos
                size: self.size
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos[0]+dp(2), self.pos[1]+dp(2)
                size: self.size[0]-dp(4), self.size[1]-dp(4)
        Label:
            text: 'Registro de Cuenta'
            color: 0,0,0,1
            font_size: dp(20)
            bold: True
            halign: 'center'
            valign: 'middle'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1,0.9)
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                size:self.size
                pos: self.pos
            Color:
                rgba: 0.95, 0.9,0.9,1
            Rectangle:
                size:self.size[0]-dp(4),self.size[1]-dp(4)
                pos:self.pos[0]+dp(2),self.pos[1]+dp(2)
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_y: 1
            size_hint: (1,1)
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)

                Input_Registrar_L:
                    id: rut_input
                    t_text: 'Rut'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Input_Registrar_L:
                    id: nombres_input
                    t_text: 'Nombres'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Input_Registrar_L:
                    id: apellidos_input
                    t_text: 'Apellidos'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Input_Registrar_L:
                    id: edad_input
                    t_text: 'Edad'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Input_Registrar_L:
                    id: telefono_input
                    t_text: 'Numero de Teléfono'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Input_Registrar_L:
                    id: alias_input
                    t_text: 'Alias de Usuario'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Input_Registrar_L:
                    id: correo_input
                    t_text: 'Correo Electrónico'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Input_Registrar_L:
                    id: contrasena_input
                    t_text: 'Contraseña'
                    password: False
                    size_hint_y: None
                    height: dp(40)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    Terminos_y_Condiciones:
        id: terminos_y_condiciones
        size_hint_y: None
        height: dp(30)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        Button_registrar:
            text: 'Regresar'
            size_hint: 0.4,None
            height: dp(50)
            on_release: root.Regresar_Login()
        
        Button_registrar:
            text: 'Registrar Cuenta'
            size_hint: 1,None
            height: dp(50)
            on_release:
                root.registrar_usuario_firestore(
                alias_input.ids.usuario.text,
                apellidos_input.ids.usuario.text,
                contrasena_input.ids.usuario.text,
                correo_input.ids.usuario.text,
                edad_input.ids.usuario.text,
                nombres_input.ids.usuario.text,
                rut_input.ids.usuario.text,
                telefono_input.ids.usuario.text
                )

